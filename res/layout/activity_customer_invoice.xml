<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerInvoice">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:textAlignment="center"
        android:id="@+id/tvInvoiceTitle"
        android:textColor="@color/white"
        android:text="Customer Invoice"></TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">
        <TableRow android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnInvoiceBack"
                android:layout_column="1"
                android:text="Back To POS"></Button>


        </TableRow>
    </TableLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcInoviceOrdersView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>